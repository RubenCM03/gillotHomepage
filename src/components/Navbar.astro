---
const navPages = [
    { name: "Home", href: "/" },
    { name: "Dienstleistungen", href: "/" },
    { name: "Tarife", href: "/tarife" },
    { name: "Ãœber uns", href: "/uber_uns" },
    { name: "Mitarbeiter", href: "/#" },
    { name: "Standort", href: "/standort" },
    { name: "Kontakt", href: "/kontakt" },
];
---

<div class="bg-[#001a3e] shadow-xl border-b border-white/5 mb-10">
    <div class="mx-auto">
        <nav class="flex items-center justify-between relative">
            <div class="flex items-center md:hidden p-6">
                <button
                    id="menu-toggle"
                    type="button"
                    class="text-white focus:outline-none"
                    aria-label="Open menu"
                >
                    <svg
                        class="w-7 h-7"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
                <span class="ml-3 text-white font-semibold text-lg"
                    >Gillot Consulting Services</span
                >
            </div>
            <ul class="hidden md:flex flex-1 justify-center h-full">
                {
                    navPages.map((item) => (
                        <li class="relative text-lg h-full flex items-stretch">
                            <a
                                class="p-6 h-full flex items-center hover:bg-white/10 transition-colors duration-200"
                                aria-current="page"
                                href={item.href}
                            >
                                {item.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>
        <div id="mobile-menu" class="md:hidden hidden mt-4">
            <ul class="flex flex-col">
                {
                    navPages.map((item) => (
                        <li class="hover:text-gray-300 text-lg">
                            <a
                                class="block p-3 hover:bg-white/10 transition-colors duration-200"
                                aria-current="page"
                                href={item.href}
                            >
                                {item.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</div>
