---
import KontaktButton from "@/components/KontaktButton.astro";
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title={i18n.dienstleistungen.sicherheit.SEO_TITLE}
    description={i18n.dienstleistungen.sicherheit.SEO_DESCRIPTION}
    keywords={i18n.dienstleistungen.sicherheit.KEYWORDS}
>
    <link slot="alternate" rel="alternate" hreflang="de" href="https://gillotconsulting.com/sicherheit-datenschutz/" />
	<link slot="alternate" rel="alternate" hreflang="en" href="https://gillotconsulting.com/en/sicherheit-datenschutz/" />
	<link slot="alternate" rel="alternate" hreflang="fr" href="https://gillotconsulting.com/fr/sicherheit-datenschutz/" />
	<link slot="alternate" rel="alternate" hreflang="x-default" href="https://gillotconsulting.com/sicherheit-datenschutz/" />

    <div class="absolute inset-0 -z-10 opacity-10 pointer-events-none">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="w-[80vw] h-[80vh] mx-auto mt-80 lg:mt-50 text-[#f4d35e]"
            fill="none"
            stroke="currentColor"
            stroke-width="1.2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M12 6m-8 0a8 3 0 1 0 16 0a8 3 0 1 0 -16 0"></path>
            <path d="M4 6v6a8 3 0 0 0 16 0v-6"></path>
            <path d="M4 12v6a8 3 0 0 0 16 0v-6"></path>
        </svg>
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-[80vw] h-[80vh] mx-auto mt-60 lg:mt-10 text-[#f4d35e]"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-file-text-shield"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M13 3v4a.997 .997 0 0 0 1 1h4"></path><path
                d="M11 21h-5a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v3.5"
            ></path><path d="M8 9h1"></path><path d="M8 12.994l3 0"></path><path
                d="M8 16.997l2 0"></path><path
                d="M21 15.994c0 4 -2.5 6 -3.5 6s-3.5 -2 -3.5 -6c1 0 2.5 -.5 3.5 -1.5c1 1 2.5 1.5 3.5 1.5"
            ></path></svg
        >
    </div>
    <div class="">
        <div class="px-5">
            <h1 class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8">
                {i18n.dienstleistungen.sicherheit.TITLE}
            </h1>
            <h2
                class="text-xl md:text-2xl text-center mx-auto text-white/70 max-w-2xl mb-8"
            >
                {i18n.dienstleistungen.sicherheit.SUBTITLE_1}
            </h2>
            <section
                class="bg-white/10 border border-white/10 rounded-xl max-w-5xl mx-auto p-6 shadow-md transition hover:shadow-lg"
            >
                <h3 class="font-bold text-2xl mb-2 text-center">
                    {i18n.dienstleistungen.sicherheit.SUBTITLE_2}
                </h3>
                <ul class="list-disc list-inside">
                    <li>
                        {i18n.dienstleistungen.sicherheit.LIST_1}
                    </li>
                    <li>{i18n.dienstleistungen.sicherheit.LIST_2}</li>
                    <li>
                        {i18n.dienstleistungen.sicherheit.LIST_3}
                    </li>
                    <li>
                        {i18n.dienstleistungen.sicherheit.LIST_4}
                    </li>
                    <li>
                        {i18n.dienstleistungen.sicherheit.LIST_5}
                    </li>
                    <li>
                        {i18n.dienstleistungen.sicherheit.LIST_6}
                    </li>
                </ul>
            </section>
        </div>
        <section class="bg-black/10 mt-8 p-10">
            <h3 class="font-bold text-2xl mb-2 text-[#f4d35e]">
                {i18n.dienstleistungen.sicherheit.SUBTITLE_3}
            </h3>
            <p class="leading-relaxed">
                {i18n.dienstleistungen.sicherheit.TEXT_1}
            </p>
            <h3 class="font-bold text-2xl mt-5 mb-2 text-[#f4d35e]">
                {i18n.dienstleistungen.sicherheit.SUBTITLE_4}
            </h3>
            <p class="leading-relaxed">
                {i18n.dienstleistungen.sicherheit.TEXT_2}
            </p>
        </section>
    </div>
    <KontaktButton />
</Layout>
