---
import KontaktButton from "@/components/KontaktButton.astro";
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.dienstleistungen.datensicherung.SEO_TITLE} description={i18n.dienstleistungen.datensicherung.SEO_DESCRIPTION} keywords={i18n.dienstleistungen.datensicherung.KEYWORDS}>
    <div class="px-5">
        <h1
            class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-10"
        >
            {i18n.dienstleistungen.datensicherung.TITLE}
        </h1>
        <section
            class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto text-center"
        >
            <div
                class="bg-white/10 p-6 rounded-xl shadow-lg backdrop-blur-sm border border-white/10 hover:shadow-xl hover:bg-white/15 transition-all duration-300"
            >
                <h2 class="font-bold text-2xl mb-2 text-[#f4d35e]">
                    {i18n.dienstleistungen.datensicherung.SUBTITLE_1}
                </h2>
                <p>
                    {i18n.dienstleistungen.datensicherung.TEXT_1}
                </p>
            </div>
            <div
                class="bg-white/10 p-6 rounded-xl shadow-lg backdrop-blur-sm border border-white/10 hover:shadow-xl hover:bg-white/15 transition-all duration-300"
            >
                <h2 class="font-bold text-2xl mb-2 text-[#f4d35e]">
                    {i18n.dienstleistungen.datensicherung.SUBTITLE_2}
                </h2>
                <p>
                    {i18n.dienstleistungen.datensicherung.TEXT_2}
                </p>
            </div>
        </section>
    </div>
    <KontaktButton />
</Layout>
