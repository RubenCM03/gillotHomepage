---
import KontaktButton from "@/components/KontaktButton.astro";
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title={i18n.dienstleistungen.beratungsdienste.SEO_TITLE}
    description={i18n.dienstleistungen.beratungsdienste.SEO_DESCRIPTION}
    keywords={i18n.dienstleistungen.beratungsdienste.KEYWORDS}
>
    <link slot="alternate" rel="alternate" hreflang="de" href="https://gillotconsulting.com/beratungsdienste/" />
	<link slot="alternate" rel="alternate" hreflang="en" href="https://gillotconsulting.com/en/beratungsdienste/" />
	<link slot="alternate" rel="alternate" hreflang="fr" href="https://gillotconsulting.com/fr/beratungsdienste/" />
	<link slot="alternate" rel="alternate" hreflang="x-default" href="https://gillotconsulting.com/beratungsdienste/" />

    <div class="px-5">
        <h1
            class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-8"
        >
            {i18n.dienstleistungen.beratungsdienste.TITLE}
        </h1>
        <section class="max-w-3xl mx-auto mb-8">
            <h2 class="font-bold text-2xl mb-2 text-[#f4d35e]">
                {i18n.dienstleistungen.beratungsdienste.SUBTITLE_1}
            </h2>
            <p>
                {i18n.dienstleistungen.beratungsdienste.TEXT}
            </p>
        </section>
        <section
            class="max-w-3xl mx-auto bg-white/10 p-6 rounded-xl shadow-lg backdrop-blur-sm border border-white/10 hover:bg-white/15 hover:shadow-xl transition-all duration-300"
        >
            <h2 class="font-bold text-2xl mb-2 text-[#f4d35e]">
                {i18n.dienstleistungen.beratungsdienste.SUBTITLE_2}
            </h2>
            <ul class="list-disc list-inside">
                <li>{i18n.dienstleistungen.beratungsdienste.LIST_1}</li>
                <li>
                    {i18n.dienstleistungen.beratungsdienste.LIST_2}
                </li>
                <li>{i18n.dienstleistungen.beratungsdienste.LIST_3}</li>
                <li>
                    {i18n.dienstleistungen.beratungsdienste.LIST_4}
                </li>
                <li>{i18n.dienstleistungen.beratungsdienste.LIST_5}</li>
            </ul>
        </section>
    </div>
    <KontaktButton />
</Layout>
