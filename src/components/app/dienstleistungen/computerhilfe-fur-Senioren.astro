---
import KontaktButton from "@/components/KontaktButton.astro";
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title={i18n.dienstleistungen.computerhilfeSenioren.SEO_TITLE}
    description={i18n.dienstleistungen.computerhilfeSenioren.SEO_DESCRIPTION}
    keywords={i18n.dienstleistungen.computerhilfeSenioren.KEYWORDS}
>
    <h1 class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-8">
        {i18n.dienstleistungen.computerhilfeSenioren.TITLE}
    </h1>
    <div class="max-w-4xl mx-auto px-5 space-y-12">

        <section class="space-y-4">
            <h2 class="text-2xl font-semibold text-[#f4d35e]">
                {i18n.dienstleistungen.computerhilfeSenioren.SUBTITLE_1}
            </h2>
            <ul class="list-disc list-inside text-lg space-y-2">
                <li>
                    {i18n.dienstleistungen.computerhilfeSenioren.LIST_1}
                    (<a class="underline hover:text-white/70" href="https://www.oesterreich.gv.at" target="_blank">oesterreich.gv.at</a>)
                </li>
                <li>{i18n.dienstleistungen.computerhilfeSenioren.LIST_2}</li>
                <li>{i18n.dienstleistungen.computerhilfeSenioren.LIST_3}</li>
                <li>
                    {i18n.dienstleistungen.computerhilfeSenioren.LIST_4}
                </li>
                <li>
                    {i18n.dienstleistungen.computerhilfeSenioren.LIST_5}
                </li>
                <li>
                    {i18n.dienstleistungen.computerhilfeSenioren.LIST_6}
                </li>
            </ul>
        </section>

        <section class="flex flex-col md:flex-row items-center gap-8">
            <img
                src="/img/content/senioren.webp"
                alt="Seniorin nutzt Tablet fÃ¼r digitalen Service in Wien"
                class="rounded-xl shadow-md hover:shadow-lg transition-all w-full max-w-md mx-auto md:mx-0"
            />
            <div>
                <h2 class="text-2xl font-semibold text-[#f4d35e] mb-3">
                    {i18n.dienstleistungen.computerhilfeSenioren.SUBTITLE_2}
                </h2>
                <p class="text-lg leading-relaxed">
                    {i18n.dienstleistungen.computerhilfeSenioren.TEXT_1}
                </p>
                <p class="text-lg leading-relaxed mt-3">
                    {i18n.dienstleistungen.computerhilfeSenioren.TEXT_2}
                </p>
            </div>
        </section>

        <section class="bg-white/10 p-5 rounded-2xl shadow-lg backdrop-blur-sm border border-white/10">
            <h2 class="text-2xl font-semibold text-[#f4d35e] mb-4 text-center">
                {i18n.dienstleistungen.computerhilfeSenioren.SUBTITLE_3}
            </h2>
            <p
                class="text-lg leading-relaxed mb-4 text-center max-w-xl mx-auto"
            >
                {i18n.dienstleistungen.computerhilfeSenioren.TEXT_3}
            </p>
            <p class="text-center text-lg font-semibold text-[#f4d35e]">
                {i18n.dienstleistungen.computerhilfeSenioren.TEXT_4}
            </p>
        </section>
    </div>
    <KontaktButton />
</Layout>
