---
import KontaktButton from "@/components/KontaktButton.astro";
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title={i18n.dienstleistungen.internet.SEO_TITLE}
    description={i18n.dienstleistungen.internet.SEO_DESCRIPTION}
    keywords={i18n.dienstleistungen.internet.KEYWORDS}
>
    <div class="px-5 max-w-6xl mx-auto">
        <h1
            class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-10"
        >
            {i18n.dienstleistungen.internet.TITLE}
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 justify-items-center">
            <section
                class="bg-white/10 p-6 rounded-2xl shadow-lg backdrop-blur-sm w-full transition-transform hover:scale-[1.02]"
            >
                <h2
                    class="text-2xl font-semibold mb-4 text-[#f4d35e] text-center"
                >
                    {i18n.dienstleistungen.internet.SUBTITLE_1}
                </h2>
                <hr class="border-t-2 border-white/20 mb-3 w-2/3 mx-auto" />
                <p class="text-lg leading-relaxed mb-5">
                    {i18n.dienstleistungen.internet.TEXT_1}
                </p>
                <div class="flex justify-center">
                    <img
                        src="/img/content/router.webp"
                        alt="Bild eines Routers"
                        class="rounded-lg max-w-[200px] drop-shadow-[0_0_35px_rgba(0,0,0,0.2)]"
                    />
                </div>
            </section>

            <section
                class="bg-white/10 p-6 rounded-2xl shadow-lg backdrop-blur-sm w-full transition-transform hover:scale-[1.02]"
            >
                <h2
                    class="text-2xl font-semibold mb-4 text-[#f4d35e] text-center"
                >
                    {i18n.dienstleistungen.internet.SUBTITLE_2}
                </h2>
                <hr class="border-t-2 border-white/20 mb-3 w-2/3 mx-auto" />
                <p class="text-lg leading-relaxed mb-5">
                    {i18n.dienstleistungen.internet.TEXT_2}
                </p>
                <div class="flex justify-center">
                    <img
                        src="/img/content/homepageImage.webp"
                        alt="Hauptwebsite des Computerunternehmens Gillot Consulting"
                        class="rounded-lg shadow-md max-w-[250px] hover:max-w-[400px] transition-all"
                    />
                </div>
            </section>

            <section
                class="bg-white/10 p-6 rounded-2xl shadow-lg backdrop-blur-sm w-full transition-transform hover:scale-[1.02] md:col-span-2"
            >
                <h2
                    class="text-2xl font-semibold mb-4 text-[#f4d35e] text-center"
                >
                    {i18n.dienstleistungen.internet.SUBTITLE_3}
                </h2>
                <hr class="border-t-2 border-white/20 mb-3 w-1/3 mx-auto" />
                <p class="text-lg leading-relaxed text-center mb-5">
                    {i18n.dienstleistungen.internet.TEXT_3}
                </p>
                <div class="flex justify-center">
                    <svg
                        class="w-24 h-24 text-[#f4d35e]"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path>
                        <path
                            d="M12.5 16h-8.5a1 1 0 0 1 -1 -1v-10a1 1 0 0 1 1 -1h16a1 1 0 0 1 1 1v8"
                        ></path>
                        <path d="M7 20h4"></path>
                        <path d="M9 16v4"></path>
                        <path d="M20 21l2 -2l-2 -2"></path>
                        <path d="M17 17l-2 2l2 2"></path>
                    </svg>
                </div>
            </section>
        </div>
    </div>

    <KontaktButton />
</Layout>
