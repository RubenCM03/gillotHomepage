---
import KontaktButton from "@/components/KontaktButton.astro";
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title={i18n.dienstleistungen.netzwerk.SEO_TITLE}
    description={i18n.dienstleistungen.netzwerk.SEO_DESCRIPTION}
    keywords={i18n.dienstleistungen.netzwerk.KEYWORDS}
>
    <div>
        <h1
            class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-2"
        >
            {i18n.dienstleistungen.netzwerk.TITLE}
        </h1>
        <section class="p-6 md:p-10 max-w-6xl mx-auto">
            <div class="flex flex-col-reverse md:flex-row items-center gap-8">
                <div class="flex-1">
                    <img
                        class="rounded-2xl w-full object-cover shadow-md hover:shadow-xl transition-all"
                        src="/img/content/network.webp"
                        alt="Bild eines Technikers bei der Konfiguration eines Unternehmensnetzwerks"
                    />
                </div>
                <div class="flex-1">
                    <h2
                        class="text-2xl font-semibold mb-4 text-[#f4d35e] text-center md:text-left"
                    >
                        {i18n.dienstleistungen.netzwerk.SUBTITLE}
                    </h2>
                    <ul class="list-disc list-inside text-lg space-y-2 mb-6">
                        <li>{i18n.dienstleistungen.netzwerk.LIST_1}</li>
                        <li>
                            {i18n.dienstleistungen.netzwerk.LIST_2}
                        </li>
                        <li>
                            {i18n.dienstleistungen.netzwerk.LIST_3}
                        </li>
                    </ul>
                    <p class="text-lg leading-relaxed">
                        {i18n.dienstleistungen.netzwerk.TEXT}
                    </p>
                </div>
            </div>
        </section>
        <section class="bg-white/10 p-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-1 md:gap-8 max-w-6xl mx-auto">
                <div class="p-6">
                    <h3
                        class="text-xl font-semibold mb-3 text-[#f4d35e] text-center"
                    >
                        {i18n.dienstleistungen.netzwerk.SERVICE_1}
                    </h3>
                    <p class="text-lg leading-relaxed text-center">
                        {i18n.dienstleistungen.netzwerk.SERVICE_1_TEXT}
                    </p>
                </div>
    
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-3 text-[#f4d35e] text-center">
                        {i18n.dienstleistungen.netzwerk.SERVICE_2}
                    </h3>
                    <p class="text-lg leading-relaxed text-center">
                        {i18n.dienstleistungen.netzwerk.SERVICE_2_TEXT}
                    </p>
                </div>
    
                <div class="p-6">
                    <h3
                        class="text-xl font-semibold mb-3 text-[#f4d35e] text-center"
                    >
                        {i18n.dienstleistungen.netzwerk.SERVICE_3}
                    </h3>
                    <p class="text-lg leading-relaxed text-center">
                        {i18n.dienstleistungen.netzwerk.SERVICE_3_TEXT}
                    </p>
                </div>
            </div>
        </section>
    </div>
    <KontaktButton />
</Layout>
