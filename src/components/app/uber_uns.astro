---
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title={i18n.uber_uns.SEO_TITLE}
    description={i18n.uber_uns.SEO_DESCRIPTION}
>
    <div>
        <h1 class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-8">{i18n.uber_uns.TITLE}</h1>

        <div class="px-12 sm:px-16 lg:px-30 mx-auto">
            <div class="flex flex-col md:flex-row items-center gap-8">
                <div class="w-full md:w-2/3 text-pretty">
                    <h2 class="mb-6 text-2xl font-bold">
                        {i18n.uber_uns.GILLOT}
                    </h2>
                    <p class="mb-4">
                        {i18n.uber_uns.GILLOT_TEXT_1}
                    </p>
                    <p>
                        {i18n.uber_uns.GILLOT_TEXT_2}
                    </p>
                </div>

                <div class="w-full md:w-1/3 flex justify-center md:justify-end">
                    <img
                        src="/img/content/jeanMichelGillot.webp"
                        alt="Jean-Michel Gillot"
                        class="w-40 md:w-56 max-w-full rounded-md shadow-lg hover:shadow-2xl transition-all"
                    />
                </div>
            </div>
        </div>
        <div class="mx-auto px-12 sm:px-16 lg:px-30 py-8 mt-15 bg-white/10">
            <h2 class="mb-2 text-2xl font-bold text-center">{i18n.uber_uns.SUBTITLE}</h2>
            <hr class="border-t-2 border-white/20 mb-8 w-1/3 mx-auto" />
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 transition-none">
                <div
                    class="bg-white/10 p-6 rounded-xl shadow-lg backdrop-blur-sm border border-white/10 hover:shadow-xl hover:bg-white/15 transition-all duration-300"
                >
                    <h3 class="mb-4 text-2xl font-bold">
                        {i18n.uber_uns.EMPLOYEE_1_TITLE}
                    </h3>
                    <ul class="list-disc list-inside text-gray-200 space-y-1">
                        <li>{i18n.uber_uns.EMPLOYEE_1_LIST_1}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_1_LIST_2}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_1_LIST_3}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_1_LIST_4}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_1_LIST_5}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_1_LIST_6}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_1_LIST_7}</li>
                    </ul>
                </div>
                <div class="bg-white/10 p-6 rounded-xl shadow-lg backdrop-blur-sm border border-white/10 hover:shadow-xl hover:bg-white/15 transition-all duration-300">
                    <h3 class="mb-4 text-2xl font-bold">
                        {i18n.uber_uns.EMPLOYEE_2_TITLE}
                    </h3>
                    <ul class="list-disc list-inside text-gray-200 space-y-1">
                        <li>{i18n.uber_uns.EMPLOYEE_2_LIST_1}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_2_LIST_2}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_2_LIST_3}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_2_LIST_4}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_2_LIST_5}</li>
                    </ul>
                </div>
                <div class="bg-white/10 p-6 rounded-xl shadow-lg backdrop-blur-sm border border-white/10 hover:shadow-xl hover:bg-white/15 transition-all duration-300">
                    <h3 class="mb-2 text-xl font-bold">
                        {i18n.uber_uns.EMPLOYEE_3_TITLE}
                    </h3>
                    <ul class="list-disc list-inside text-gray-200 space-y-1">
                        <li>{i18n.uber_uns.EMPLOYEE_3_LIST_1}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_3_LIST_2}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_3_LIST_3}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_3_LIST_4}</li>
                    </ul>
                </div>
                <div class="bg-white/10 p-6 rounded-xl shadow-lg backdrop-blur-sm border border-white/10 hover:shadow-xl hover:bg-white/15 transition-all duration-300">
                    <h3 class="mb-2 text-xl font-bold">{i18n.uber_uns.EMPLOYEE_4_TITLE}</h3>
                    <ul class="list-disc list-inside text-gray-200 space-y-1">
                        <li>{i18n.uber_uns.EMPLOYEE_4_LIST_1}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_4_LIST_2}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_4_LIST_3}</li>
                        <li>{i18n.uber_uns.EMPLOYEE_4_LIST_4}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</Layout>
