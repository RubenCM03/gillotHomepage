---
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title="Kontakt - Gillot Consulting"
    description="Kontaktieren Sie Gillot Consulting Services für Anfragen und Unterstützung. Wir sind hier, um Ihnen zu helfen."
>
    <div class="container mx-auto my-auto px-5">
        <h1 class="text-4xl font-bold text-center mx-auto mt-8 mb-8">
            Kontakt
        </h1>
        <div
            class="flex flex-col md:flex-row items-center md:items-start justify-between gap-12 bg-white/10 rounded-xl shadow-lg p-8"
        >
            <div class="md:w-1/2 mb-8 md:mb-0">
                <h2 class="text-2xl font-semibold mb-4">
                    Kontaktieren Sie uns
                </h2>
                <p class="text-lg leading-relaxed">
                    Sehr geehrte Kunden und Interessenten,<br />
                    bitte senden Sie Ihre Nachricht an diese E-Mail-Adresse mit dem
                    Betreff: <span class="font-semibold">"Anfrage"</span>.<br />
                    <span class="text-sm text-gray-300"
                        >Das Online-Formular wurde aus Datenschutzgründen
                        gelöscht.</span
                    >
                </p>
                <p class="text-lg leading-relaxed mt-2">
                    Telefon: +43 66 44 54 32 44
                </p>
            </div>
            <div
                class="flex items-center justify-center md:justify-end md:h-full min-h-[200px]"
            >
                <img
                    src="/img/mailGillot.svg"
                    alt="E-Mail Gillot Consulting"
                    class="w-[350px] max-w-full drop-shadow-lg mx-auto transition-transform hover:scale-105 flex justify-center items-center"
                />
            </div>
        </div>
    </div>
</Layout>
