---
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout title= {i18n.kontakt.SEO_TITLE} description= {i18n.kontakt.SEO_DESCRIPTION} keywords={i18n.kontakt.KEYWORDS}>
    <script slot="schema" type="application/ld+json" data-astro-exec>
        {
            "@context": "https://schema.org",
            "@type": "ContactPage",
            "name": {i18n.kontakt.SEO_TITLE},
            "url": "https://gillot.rcmdomini.cat/kontakt/",
            "description": {i18n.kontakt.SEO_DESCRIPTION}
        }
    </script>
    <div class="container mx-auto my-auto px-5">
        <h1 class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-8">
             {i18n.kontakt.TITLE}
        </h1>
        <div
            class="flex flex-col md:flex-row items-center md:items-start justify-between gap-12 bg-white/10 rounded-xl shadow-lg p-8"
        >
            <div class="md:w-1/2 mb-8 md:mb-0">
                <h2 class="text-2xl font-semibold mb-4">
                     {i18n.kontakt.SUBTITLE}
                </h2>
                <p class="text-lg leading-relaxed">
                    {i18n.kontakt.TEXT_1}<br />
                    {i18n.kontakt.TEXT_2}
                    <span class="font-semibold"><br> "{i18n.kontakt.TEXT_3}"</span
                    >.<br />
                    <span class="text-sm text-gray-200">
                        {i18n.kontakt.TEXT_4}</span
                    >
                </p>
                <p class="text-lg leading-relaxed mt-2 font-semibold">
                    {i18n.kontakt.PHONE} +43 66 44 54 32 44
                </p>
            </div>
            <div
                class="flex items-center justify-center md:justify-end md:h-full min-h-[200px]"
            >
                <img
                    src="/img/mailGillot.svg"
                    alt="E-Mail Gillot Computer Services"
                    class="w-[350px] max-w-full drop-shadow-lg mx-auto transition-transform hover:scale-105 flex justify-center items-center"
                />
            </div>
        </div>
    </div>
</Layout>
