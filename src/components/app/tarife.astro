---
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title={i18n.tarife.SEO_TITLE}
    description={i18n.tarife.SEO_DESCRIPTION}
    keywords={i18n.tarife.KEYWORDS}
>
    <div class="container mx-auto">
        <h1
            class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-8"
        >
            {i18n.tarife.TITLE}
        </h1>
        <div class="flex flex-col md:flex-row gap-8 items-start px-5 lg:px-0">
            <div class="w-full md:w-2/3">
                <table
                    class="w-full max-w-2xl mx-auto rounded-lg overflow-hidden shadow-lg bg-white/10"
                >
                    <thead>
                        <tr class="bg-[#125683]">
                            <th class="py-3 px-4 text-left font-semibold w-2/3"
                                >{i18n.tarife.TABLE_HEADER_1}</th
                            >
                            <th
                                class="py-3 px-4 text-center font-semibold w-1/6"
                                >{i18n.tarife.TABLE_HEADER_2}</th
                            >
                            <th
                                class="py-3 px-4 text-center font-semibold w-1/6"
                                >{i18n.tarife.TABLE_HEADER_3}</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b border-white/10">
                            <td class="py-3 px-4">{i18n.tarife.TABLE_TEXT_1}</td
                            >
                            <td class="py-3 px-4 text-center">66,66 €</td>
                            <td class="py-3 px-4 text-center">80 €</td>
                        </tr>
                        <tr class="border-b border-white/10 bg-[#125683]/60">
                            <td class="py-3 px-4">{i18n.tarife.TABLE_TEXT_2}</td
                            >
                            <td class="py-3 px-4 text-center">75 €</td>
                            <td class="py-3 px-4 text-center">90 €</td>
                        </tr>
                        <tr class="border-b border-white/10">
                            <td class="py-3 px-4">{i18n.tarife.TABLE_TEXT_3}</td
                            >
                            <td class="py-3 px-4 text-center">91,66 €</td>
                            <td class="py-3 px-4 text-center">110 €</td>
                        </tr>
                        <tr class="border-b border-white/10 bg-[#125683]/60">
                            <td class="py-3 px-4">{i18n.tarife.TABLE_TEXT_4}</td
                            >
                            <td class="py-3 px-4 text-center">33,33 €</td>
                            <td class="py-3 px-4 text-center">40 €</td>
                        </tr>
                        <tr class="border-b border-white/10">
                            <td class="py-3 px-4">{i18n.tarife.TABLE_TEXT_5}</td
                            >
                            <td class="py-3 px-4 text-center">25 €</td>
                            <td class="py-3 px-4 text-center">30 €</td>
                        </tr>
                        <tr>
                            <td
                                colspan="3"
                                class="py-3 px-4 bg-[#125683] font-medium text-center"
                                >{i18n.tarife.TABLE_END_1}</td
                            >
                        </tr>
                        <tr>
                            <td
                                colspan="3"
                                class="py-3 px-4 bg-[#125683] text-center"
                            >
                                <b>STAND: 11. Jan 2024</b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <aside class="w-full md:w-1/3 mt-8 md:mt-0">
                <div class="bg-[#125683] rounded-lg shadow-md p-6">
                    <h2
                        class="text-2xl font-semibold mb-3 flex items-center gap-2"
                    >
                        <svg
                            class="w-6 h-6"
                            xmlns="http://www.w3.org/2000/svg"
                            width="48"
                            height="48"
                            viewBox="0 0 24 24"
                            fill="white"
                        >
                            <path
                                d="M2 4h20c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H2c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v.01L12 13 22 6.01V6H2zm0 2.25V18h20V8.25l-10 7L2 8.25z"
                            ></path>
                        </svg>
                        {i18n.tarife.KONTAKT}
                    </h2>
                    <p class="text-blue-100 mb-2">
                        {i18n.tarife.KONTAKT_TEXT}
                    </p>
                    <a
                        href="/kontakt"
                        class="inline-block mt-2 bg-[#0C3956] hover:bg-black/50 font-bold py-2 px-4 rounded transition-colors duration-200 shadow"
                        >{i18n.tarife.KONTAKT_BUTTON}</a
                    >
                </div>
            </aside>
        </div>
    </div>
</Layout>
