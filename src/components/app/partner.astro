---
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
    title={i18n.partner.SEO_TITLE}
    description={i18n.partner.SEO_DESCRIPTION}
    keywords={i18n.partner.KEYWORDS}
>
    <link slot="alternate" rel="alternate" hreflang="de" href="https://gillotconsulting.com/partner/" />
	<link slot="alternate" rel="alternate" hreflang="en" href="https://gillotconsulting.com/en/partner/" />
	<link slot="alternate" rel="alternate" hreflang="fr" href="https://gillotconsulting.com/fr/partner/" />
	<link slot="alternate" rel="alternate" hreflang="x-default" href="https://gillotconsulting.com/partner/" />

    <div class="max-w-4xl mx-auto px-2 sm:px-4">
        <h1
            class="text-4xl md:text-5xl font-bold text-center mx-auto mt-8 mb-8"
        >
            {i18n.partner.TITLE}
        </h1>
        <div
            class="px-2 sm:px-4 py-6 sm:py-10 sm:ps-20 sm:pe-20 bg-white/20 rounded-lg"
        >
            <div class="flex flex-col gap-8 sm:gap-10">
                <div
                    class="flex flex-col md:flex-row items-center md:items-stretch justify-center gap-4"
                >
                    <div
                        class="flex flex-col justify-center text-center md:text-left w-full md:w-2/3"
                    >
                        <h2 class="text-xl sm:text-2xl font-semibold pb-2">
                            {i18n.partner.SUBTITLE_1}
                        </h2>
                        <p>{i18n.partner.TEXT_1}</p>
                        <p>Buchhaltung Wien G.BH EU</p>
                    </div>
                    <div
                        class="flex items-center justify-center w-full md:w-1/3 mt-4 md:mt-0"
                    >
                        <a
                            href="https://www.buchhaltungwien.at/"
                            target="_blank"
                        >
                            <img
                                src="/img/partner/buchhaltungWien.webp"
                                alt="Buchhaltung Wien Logo"
                                class="w-32 h-20 sm:w-44 sm:h-28 md:w-52 md:h-32 object-contain"
                            />
                        </a>
                    </div>
                </div>
                <hr
                    class="w-20 sm:w-70 h-1 mx-auto bg-[#1974af] border-0 rounded-sm md:my-2"
                />
                <div
                    class="flex flex-col md:flex-row items-center md:items-stretch justify-center gap-4"
                >
                    <div
                        class="flex flex-col justify-center text-center md:text-left w-full md:w-2/3"
                    >
                        <h2 class="text-xl sm:text-2xl font-semibold pb-2">
                            {i18n.partner.SUBTITLE_2}
                        </h2>
                        <p>{i18n.partner.TEXT_2}</p>
                    </div>
                    <div
                        class="flex items-center justify-center w-full md:w-1/3 mt-4 md:mt-0"
                    >
                        <a href="https://www.trendmicro.com/" target="_blank">
                            <img
                                src="/img/partner/trendMicro.webp"
                                alt="Trend Micro Logo"
                                class="w-32 h-20 sm:w-44 sm:h-28 md:w-52 md:h-32 object-contain"
                            />
                        </a>
                    </div>
                </div>
                <hr
                    class="w-20 sm:w-70 h-1 mx-auto bg-[#1974af] border-0 rounded-sm md:my-2"
                />
                <div
                    class="flex flex-col md:flex-row items-center md:items-stretch justify-center gap-4"
                >
                    <div
                        class="flex flex-col justify-center text-center md:text-left w-full md:w-2/3"
                    >
                        <h2 class="text-xl sm:text-2xl font-semibold pb-2">
                            {i18n.partner.SUBTITLE_3}
                        </h2>
                        <p>
                            {i18n.partner.TEXT_3}
                        </p>
                    </div>
                    <div
                        class="flex items-center justify-center w-full md:w-1/3 mt-4 md:mt-0"
                    >
                        <a href="https://de.norton.com/" target="_blank">
                            <img
                                src="/img/partner/nortonLogo.webp"
                                alt="Norton Logo"
                                class="w-32 h-20 sm:w-44 sm:h-28 md:w-52 md:h-32 object-contain"
                            />
                        </a>
                    </div>
                </div>
                <hr
                    class="w-20 sm:w-70 h-1 mx-auto bg-[#1974af] border-0 rounded-sm md:my-2"
                />
                <div
                    class="flex flex-col md:flex-row items-center md:items-stretch justify-center gap-4"
                >
                    <div
                        class="flex flex-col justify-center text-center md:text-left w-full md:w-2/3"
                    >
                        <h2 class="text-xl sm:text-2xl font-semibold pb-2">
                            {i18n.partner.SUBTITLE_4}
                        </h2>
                        <p>
                            {i18n.partner.TEXT_4}
                        </p>
                    </div>
                    <div
                        class="flex items-center justify-center w-full md:w-1/3 mt-4 md:mt-0"
                    >
                        <a href="https://www.acronis.com/" target="_blank">
                            <img
                                src="/img/partner/acronisLogo.webp"
                                alt="Acronis Logo"
                                class="w-32 h-20 sm:w-44 sm:h-28 md:w-52 md:h-32 object-contain"
                            />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
