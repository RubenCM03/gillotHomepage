---
import Layout from "@/layouts/Layout.astro";

import { getI18N } from "@/i18n/index.ts";

const currentLocale = Astro.url.pathname.split("/")[1] || "de";
const i18n = getI18N({ currentLocale });
---

<Layout
  title={i18n.notFound.SEO_TITLE}
  description={i18n.notFound.SEO_DESCRIPTION}
  keywords=""
>
  <section
    class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4"
  >
    <h1 class="text-6xl font-extrabold mb-4 text-[#DB1F32]">{i18n.notFound.TITLE}</h1>
    <h2 class="text-3xl md:text-4xl font-bold mb-6">{i18n.notFound.SUBTITLE}</h2>
    <p class="max-w-xl mb-8 text-lg md:text-xl text-white/90">
      {i18n.notFound.TEXT}
    </p>
    <a
      href="/"
      class="inline-block bg-[#DB1F32] text-white font-semibold px-6 py-3 rounded-lg shadow-lg hover:bg-[#a71724] transition-colors"
      >{i18n.notFound.BUTTON}
    </a>
  </section>
</Layout>
