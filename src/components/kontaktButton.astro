---
import { getI18N } from "@/i18n/index.ts";


const pathname = Astro.url.pathname;
const localeFromPath = pathname.split("/")[1];
const supportedLocales = ["de", "en", "fr"];
const currentLocale = supportedLocales.includes(localeFromPath)
    ? localeFromPath
    : "de";

function withLocale(path: string) {
    return currentLocale === "de" ? path : `/${currentLocale}${path}`;
}

const i18n = getI18N({ currentLocale });
---
<div class="text-center mt-10 px-4">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">
            {i18n.dienstleistungen.kontakt_button.TITLE}
        </h2>
        <p class="text-lg mb-6">
            {i18n.dienstleistungen.kontakt_button.TEXT}
        </p>
        <a
            href={withLocale("/kontakt/")}
            class="inline-block bg-[#f5a623] hover:bg-[#DB8C0A] hover:text-lg font-bold px-8 py-3 rounded-xl shadow-lg transition-all duration-300"
        >
            {i18n.dienstleistungen.kontakt_button.BUTTON}
        </a>
    </div>